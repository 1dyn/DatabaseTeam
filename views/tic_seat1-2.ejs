<script src="http://code.jquery.com/jquery-1.12.4.min.js"></script> 
<script src="../js/jquery.seat-charts.js"></script> 
<script>
			
			const gimoring = <%- JSON.stringify(results_gimoring2) %>;
			var map = String(gimoring[1].seat).split("|");
			document.getElementById("anggimo2").value = gimoring[1].seats_id ;
			var firstSeatLabel = 1;
			var onseat2 = new Array(); 
			$(document).ready(function() {
				var $cart = $('#selected-seats'),
					$counter = $('#counter'),
					$total = $('#total'),
					sc = $('#seat-map').seatCharts({
					// map: [
					// 'eeeee',
					// 'eeeee',
					// 'eeeee',
					// 'eeeee',
					// 'eeeee',	
					// '_f_f_',
					// '_f_f_'
					// ],
					// map: [
					// '[a,e,e,e,e]',
					// '[e,e,e,e,e]',	
					// '[e,e,e,e,e]',
					// '[e,e,e,e,e]',
					// '[e,e,e,e,e]'

					// ],
			
				map,
				
					seats: {
						f: {
							price   : 20000,
							classes : 'sweet_box', //your custom CSS class
							category: 'sweet_box'
						},
						e: {
							price   : 12000,
							classes : 'normal_seat', //your custom CSS class
							category: 'normal_seat'
						},				
						a:{
							price : 0,
							classes : 'selected',
							category : 'selected'
						}
					},
					naming : {
						top : false,
						getLabel : function (character, row, column) {
							return firstSeatLabel++;
						},
					},
					legend : {
						node : $('#legend'),
					    items : [
							[ 'e', 'available',   'normal_seat' ],
						//	[ 'x'  'aunavailable', 'already_booked'],
							[ 'f', 'available',   'Sweet_box'],
							[ 'a', 'unavailable', 'selected']

						]				
						
					},
					click: function () {
						if (this.status() == 'available') {
							//let's create a new <li> which we'll add to the cart items
							$('<li>'+this.data().category+'#'+this.settings.label +'</b> <a href="#" class="cancel-cart-item">[취소하기]</a></li>')
								.attr('id', 'cart-item-'+this.settings.id)
								.data('seatId', this.settings.id)
								.appendTo($cart);
								onseat2.push(this.settings.id);
							// 있으면 빼고	
								
							// 취소하면 지워지는거 체크 
								document.getElementById("onseat2").value = onseat2;

								//console.log(onseat2);
								
								
							/*
							 * Lets update the counter and total
							 *
							 * .find function will not find the current seat, because it will change its stauts only after return
							 * 'selected'. This is why we have to add 1 to the length and the current seat price to the total.
							 */
							$counter.text(sc.find('selected').length+1);
							$total.text(recalculateTotal(sc)+this.data().price);
							document.getElementById("p").value = recalculateTotal(sc)+this.data().price;
							// var pay = document.getElementById("pay").value = "g"
							return 'selected';
						} else if (this.status() == 'selected') {
							//update the counter
							$counter.text(sc.find('selected').length-1);
							//and total
							$total.text(recalculateTotal(sc)-this.data().price);
							document.getElementById("p").value = recalculateTotal(sc)-this.data().price;

							//remove the item from our cart
							$('#cart-item-'+this.settings.id).remove();
							onseat2.splice(onseat2.indexOf(this.settings.id),1);
							document.getElementById("onseat2").value = onseat2;


							//seat has been vacated
							return 'available';
						} else if (this.status() == 'unavailable') {
							//seat has been already booked
							return 'unavailable';
						} else {
							return this.style();
						}

					}
				});

				//this will handle "[cancel]" link clicks
				$('#selected-seats').on('click', '.cancel-cart-item', function () {
					//let's just trigger Click event on the appropriate seat, so we don't have to repeat the logic here
					sc.get($(this).parents('li:first').data('seatId')).click();
				});

				//let's pretend some seats have already been booked
				sc.get([]).status('available');
		
		});

		function recalculateTotal(sc) {
			var total = 0;
		
			//basically find every selected seat and sum its price
			sc.find('selected').each(function () {
				total += this.data().price;
			});
			
			return total;
		}

		
		</script>
